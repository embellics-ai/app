#!/usr/bin/env bash
# Prevent accidental pushes to main from local machines
branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo "")
if [ "$branch" = "main" ]; then
  echo "Direct pushes to 'main' are disallowed by repository policy."
  echo "Create a branch and open a pull request instead."
  exit 1
fi
exit 0
